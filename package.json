{
  "name": "l20n",
  "description": "A localization library for Firefox OS",
  "version": "4.0.0-pre",
  "homepage": "http://l20n.org",
  "author": "Mozilla <l10n-drivers@mozilla.org>",
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Zibi Braniecki",
      "email": "zbraniecki@mozilla.com"
    },
    {
      "name": "Staś Małolepszy",
      "email": "stas@mozilla.com"
    }
  ],
  "bugs": "https://bugzilla.mozilla.org/enter_bug.cgi?product=Firefox%20OS&component=Gaia::L10n",
  "scripts": {
    "test": "make test-lib",
    "prepublish": "make build"
  },
  "directories": {
    "lib": "./src"
  },
  "main": "./dist/bundle/node/l20n.js",
  "browser": "./dist/bundle/web/l20n-common.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/l20n/l20n.js.git"
  },
  "keywords": [
    "localization",
    "l10n"
  ],
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.7",
    "babel-register": "^6.7.2",
    "bridge": "gaia-components/bridge",
    "colors": "^1.1.2",
    "commander": "^2.9",
    "eslint": "^2.3.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "mocha": "^2.4.5",
    "prettyjson": "^1.1.3",
    "rollup": "^0.25.4"
  },
  "engine": {
    "node": ">=6"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "rules": {
      "valid-typeof": 1,
      "no-console": 1,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-extra-semi": 1,
      "no-func-assign": 2,
      "no-unreachable": 1,
      "no-unexpected-multiline": 2,
      "no-sparse-arrays": 2,
      "block-scoped-var": 1,
      "complexity": [
        1,
        18
      ],
      "dot-location": [
        2,
        "property"
      ],
      "no-implied-eval": 2,
      "no-loop-func": 2,
      "no-magic-numbers": [
        1,
        {
          "ignore": [
            -1,
            0,
            1,
            2
          ]
        }
      ],
      "no-useless-call": 1,
      "no-useless-concat": 1,
      "no-delete-var": 2,
      "no-shadow": 1,
      "no-undef-init": 1,
      "no-unused-vars": 1,
      "consistent-return": 1,
      "curly": [
        2,
        "multi-line"
      ],
      "eqeqeq": 2,
      "no-extend-native": 2,
      "no-extra-bind": 1,
      "no-redeclare": 2,
      "array-bracket-spacing": 1,
      "brace-style": [
        1,
        "1tbs"
      ],
      "no-mixed-spaces-and-tabs": 2,
      "prefer-arrow-callback": 1,
      "prefer-const": 1,
      "prefer-template": 0,
      "prefer-spread": 2,
      "quotes": [
        2,
        "single"
      ],
      "no-var": 1,
      "max-depth": [
        2,
        6
      ],
      "max-len": [
        2,
        80
      ],
      "no-nested-ternary": 2,
      "no-unneeded-ternary": 2,
      "strict": [
        2,
        "global"
      ],
      "indent": [
        1,
        2,
        {
          "SwitchCase": 1
        }
      ]
    }
  },
  "dependencies": {
    "string.prototype.endswith": "^0.2.0",
    "string.prototype.startswith": "^0.2.0"
  }
}
